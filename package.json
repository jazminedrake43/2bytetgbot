{
  "name": "@2byte/tgbot-framework",
  "version": "1.0.2",
  "description": "A TypeScript framework for creating Telegram bots with sections-based architecture (Bun optimized)",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "2byte-bot": "./bin/2byte-cli.ts"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "build": "tsc",
    "cli": "bun ./bin/2byte-cli.ts",
    "pack": "npm pack",
    "publish:npm": "npm publish"
  },
  "keywords": [
    "telegram",
    "bot",
    "typescript",
    "sections",
    "bun",
    "framework"
  ],
  "author": "2byte",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.6.1",
    "inquirer": "^12.9.6",
    "mustache": "^4.2.0",
    "socks": "^2.8.6",
    "telegraf": "^4.16.3",
    "telegram": "^2.26.22",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "fs-extra": "^11.3.2"
  },
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "@types/node": "^20.19.8",
    "bun-types": "^1.2.18",
    "typescript": "^5.8.3"
  },
  "files": [
    "src/**/*",
    "cli/**/*",
    "templates/**/*",
    "README.md"
  ]
}